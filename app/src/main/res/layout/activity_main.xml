<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movieb">

    <TextView
        android:id="@+id/title1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="기말고사과제_20173013_김여진"
        android:textColor="#ff333333"
        android:textSize="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="#aaffffff"
        >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="선택 메뉴"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ff333333"
            />
        <Button
            android:id="@+id/main01Button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="로그인"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/main02Button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="주간 박스오피스 순위"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/main03Button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="영화관 위치보기"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/main04Button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="영화 예매하기"
            android:textSize="18dp"
            android:textStyle="bold"
            />
    </LinearLayout>

</RelativeLayout>